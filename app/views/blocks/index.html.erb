<p id="notice"><%= notice %></p>

<h1>Blocks Details</h1>

<table border="2px" class="table">
  <thead>
    <tr>
      <th>Block number</th>
      <th>Number of rooms</th>
      <th>Number of allotments</th>
      <th>Action</th>
      <th>Action</th>
      <th>Action</th>

    </tr>
  </thead>

  <tbody>
    <% @blocks.each do |block| %>
      <tr>
        <td><%= block.block_number %></td>
        <td><%= block.number_of_rooms %></td>
        <td><%= block.number_of_allotments %></td>
        <td><%= link_to 'Show', block,class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_block_path(block),class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', block, method: :delete,class: "btn btn-info",data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Block', new_block_path,class: "btn btn-info" %>
